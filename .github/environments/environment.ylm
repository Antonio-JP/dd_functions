name: sage-cgf
channels:
  - conda-forge
  - defaults
dependencies:
  - python=3
  - sage=9.0
  - setuptools_scm
  - sphinx
  - sphinxcontrib-websupport
  - sphinxcontrib-bibtex
  - lrslib
  - normaliz
  - boost-cpp      # For installing PyNormaliz
  - mathjax
  - pip
  - pip:
    - pynormaliz==2.8
    - sage-package
